# Managed by ff-berlin ansible

[Unit]
Description=Buildbot-worker for Freifunk-Berlin
{% if buildbot_worker_ramdisk %}
After=buildbot-worker-setup.service network.target
Requires=buildbot-worker-setup.service
{% else %}
After=network.target
{% endif %}

[Service]
User=bbworker
Group=bbworker
WorkingDirectory={{ buildbot_worker_path }}
ExecStart={{ buildbot_worker_path }}/env/bin/buildbot-worker start --nodaemon

[Install]
WantedBy=multi-user.target
