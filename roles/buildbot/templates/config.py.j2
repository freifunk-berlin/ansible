        ['{{ buildbot_master_worker.name }}', '{{ buildbot_master_worker.passwd }}'],
        {% for worker in buildbot_workers %}
        ['{{ worker.name }}', '{{ worker.passwd }}'],
        {% endfor %}
    ],

